    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "chai": "5.0.0",
    "eslint": "8.55.0",
    "esmock": "2.6.0",
    "express": "4.18.2",
    "jsdom": "23.2.0",
    "mocha": "10.2.0",
    "node-esm-loader": "0.3.0",
    "postcss-nesting": "12.0.1",
    "prettier": "3.1.0",
    "sinon": "17.0.1",
    "stylelint": "15.11.0",
    "stylelint-config-standard": "34.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vite": "5.0.0",
    "vite-plugin-handlebars": "1.6.0"
