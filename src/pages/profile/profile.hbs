      {{>SettingsFormInput/SettingsFormInput label="Фамилия" type="text"
      id="second_name" value="Ivanov"}}
      {{>SettingsFormInput/SettingsFormInput label="Имя в чате" type="text"
      id="display_name" value="Ivan"}}
      {{>SettingsFormInput/SettingsFormInput label="Телефон" type="phone"
      id="phone" value="+79099673030"}} --}}
    </form>

    <div class="settings-buttons">
      {{!-- {{> ButtonSetting/ButtonSetting text="Изменить данные" buttonPrimary=true}}
      <span class="separator-line"></span>
      {{> ButtonSetting/ButtonSetting text="Изменить пароль" buttonPrimary=true}}
